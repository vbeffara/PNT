    have hf : ContDiff ‚Ñù k f := f.smooth.of_le (by simp [hk])
    have hg : ContDiff ‚Ñù k g := g.smooth.of_le (by simp [hk])
    simpa [iteratedDeriv_sub hf hg] using (f.integrable hk).sub (g.integrable hk)

